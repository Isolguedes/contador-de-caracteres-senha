<!-- TÃ­tulo da pÃ¡gina -->

<input type="text" id="camposenha" placeholder="DIGITE AQUI...">
<!-- Campo de entrada de texto para o usuÃ¡rio digitar -->
<!-- 'id' usado para referenciar no JavaScript -->
<!-- 'placeholder' mostra texto antes do usuÃ¡rio digitar -->

<p id="resultado">ğŸ‘‰ VocÃª digitou:</p>
<!-- ParÃ¡grafo que exibirÃ¡ o que o usuÃ¡rio digitou -->
<!-- 'id' usado para atualizar o texto dinamicamente -->

<script>
  // Pega os elementos da pÃ¡gina pelo id
  const campo = document.getElementById("camposenha");
  const resultado = document.getElementById("resultado");

  // Adiciona um evento que roda toda vez que o usuÃ¡rio solta uma tecla
  campo.addEventListener("keyup", function () {
    // Pega o texto digitado pelo usuÃ¡rio
    let texto = campo.value;

    // Conta o nÃºmero de caracteres digitados
    let contagem = texto.length;

    // Atualiza o parÃ¡grafo com o texto digitado e a quantidade de caracteres
    resultado.textContent = "ğŸ‘‰ VocÃª digitou: " + texto + " (" + contagem + " caractere(s))";
  });
</script>
